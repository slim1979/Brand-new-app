	<!-- <label>Введите текст публикации</label> -->
	<div><textarea class="form-control" rows="6" name="new_post" placeholder="Сюда введите текст публикации. Обязательное поле"></textarea></div>  <br />
	<button type="submit" class="btn btn-primary">Отправить</button>
	
</form>
